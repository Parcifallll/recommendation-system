# localhost for local dev

# Application
APP_NAME=RecommendationSystem
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8001

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_postgres
POSTGRES_DB=recommendations

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis
REDIS_DB=0

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=python-ml-service
KAFKA_AUTO_OFFSET_RESET=earliest

# ML Model
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
TOP_N_RECOMMENDATIONS=20
MIN_SIMILARITY_THRESHOLD=0.1

# Recommendation weights
WEIGHT_CONTENT_SIMILARITY=1.0
WEIGHT_LIKE_BOOST=1.0
WEIGHT_DISLIKE_PENALTY=0.5

# Recency boost (optional - defaults in config.py)
RECENCY_BOOST_1H=2.0
RECENCY_BOOST_6H=1.8
RECENCY_BOOST_24H=1.5
RECENCY_BOOST_3D=1.3
RECENCY_BOOST_7D=1.1
RECENCY_BOOST_DEFAULT=1.0
